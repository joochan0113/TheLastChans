<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp">

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:paddingTop="30dp"
            android:text="Add Note to Firebase"
            tools:layout_editor_absoluteX="3dp" />

        <EditText
            android:id="@+id/valueField"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_above="@+id/addBtn"
            android:ems="10"
            android:gravity="top"
            android:hint="Add Notes"
            android:inputType="textMultiLine"
            android:paddingTop="30dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="121dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keyValue"
            android:text="Previous Notes" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/valueField"
            android:layout_alignParentStart="true"
            android:text="Update Notes Here" />

        <TextView
            android:id="@+id/keyValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Key"
            android:inputType="textPersonName"
            android:paddingTop="30dp"
            android:text="Note to the Patient"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="200dp" />

        <TextView
            android:id="@+id/valueField2"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_below="@+id/textView2"
            android:ems="10"
            android:gravity="top"
            android:hint="Added Notes"
            android:inputType="textMultiLine"
            android:paddingTop="30dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="121dp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>