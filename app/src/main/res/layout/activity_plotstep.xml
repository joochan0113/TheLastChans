<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joochankim.thelastchans.PlotActivity">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphStep"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/stepsTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graphStep"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="70dp"
        android:text="Total Steps: "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dateTextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stepsTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-32dp"
        android:textSize="24sp" />


</RelativeLayout>
